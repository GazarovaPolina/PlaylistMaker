<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LayoutStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutBackgroundWhiteStyle" parent="LayoutStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="LayoutBackgroundBlueStyle" parent="LayoutStyle">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>


    <style name="ToolbarStyle">
        <item name="titleTextColor">@color/dark_blue</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:gravity">top</item>
        <item name="titleMarginTop">14dp</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="contentInsetStartWithNavigation">64dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/medium_layout_height</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:paddingLeft">@dimen/medium_indent</item>
        <item name="android:paddingRight">@dimen/small_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SwitchStyle" parent="TextStyle">
        <item name="switchMinWidth">56dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="trackTint">@color/light_grey</item>
        <item name="thumbTint">@color/dark_grey</item>
    </style>

    <style name="textViewShareStyle" parent="TextStyle">
        <item name="drawableEndCompat">@drawable/ic_share</item>
    </style>

    <style name="textViewSupportStyle" parent="TextStyle">
        <item name="drawableEndCompat">@drawable/ic_support</item>
    </style>

    <style name="textViewAgreementStyle" parent="TextStyle">
        <item name="drawableEndCompat">@drawable/ic_arrow_forward</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:layout_marginBottom">@dimen/medium_indent</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/dark_blue</item>
        <item name="iconPadding">@dimen/small_padding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

</resources>