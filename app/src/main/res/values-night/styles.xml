<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LayoutStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutBackgroundWhiteStyle">
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="LayoutBackgroundBlueStyle" parent="LayoutStyle">
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ToolbarStyle">
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_dark_mode</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">top</item>
        <item name="titleMarginTop">14dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="contentInsetStartWithNavigation">64dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/medium_layout_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:paddingLeft">@dimen/medium_indent</item>
        <item name="android:paddingRight">@dimen/small_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SwitchStyle" parent="TextStyle">
        <item name="switchMinWidth">56dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="trackTint">@color/blue_night_style</item>
        <item name="thumbTint">@color/blue</item>
    </style>

    <style name="themeSwitcher" parent="TextStyle">
        <item name="trackTint">@color/blue_night_style</item>
        <item name="thumbTint">@color/blue</item>
        <item name="switchMinWidth">54dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="textViewShareStyle" parent="TextStyle">
        <item name="drawableEndCompat">@drawable/ic_share_dark_mode</item>
    </style>

    <style name="textViewSupportStyle" parent="TextStyle">
        <item name="drawableEndCompat">@drawable/ic_support_dark_mode</item>
    </style>

    <style name="textViewAgreementStyle" parent="TextStyle">
        <item name="drawableEndCompat">@drawable/ic_arrow_forward_dark_mode</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:layout_marginBottom">@dimen/medium_indent</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/dark_blue</item>
        <item name="iconPadding">@dimen/small_padding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="editTextSearchStyle">
        <item name="android:layout_marginTop">@dimen/smallest_margin</item>
        <item name="android:layout_marginBottom">@dimen/smallest_margin</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">textNoSuggestions|textVisiblePassword</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/edit_text_search_paddingStart</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="placeholderMessageStyle">
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/nothing_found_message</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="activitySearchBtnStyle">
        <item name="android:backgroundTint">@color/update_search_page_btn_background</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:text">@string/update</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/update_search_page_btn_text</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="cornerRadius">@dimen/btn_update_corner_radius</item>
    </style>

</resources>