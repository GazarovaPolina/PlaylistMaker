<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSearch"
        style="@style/ToolbarStyle"
        app:title="@string/search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbarSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search"
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:maxLines="1"
            android:paddingStart="36dp"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/hint"
            android:textSize="@dimen/small_text_size"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/iconSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/medium_layout_margin"
            android:src="@drawable/ic_search_grey"
            app:tint="@color/hint" />

        <ImageView
            android:id="@+id/iconClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/medium_layout_margin"
            android:src="@drawable/ic_clear"
            android:visibility="gone"
            app:tint="@color/hint" />

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search"
        android:layout_marginTop="16dp"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/placeholderImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@drawable/ic_placeholder_nothing_found"
        app:layout_constraintTop_toBottomOf="@id/search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="102dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/placeholderMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/nothing_found"
        app:layout_constraintTop_toBottomOf="@id/placeholderImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="19sp"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="@color/nothing_found_message"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="24dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/message_download_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download_failed"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/placeholderMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="19sp"
        android:fontFamily="@font/ys_display_medium"
        android:layout_marginTop="28dp"
        android:paddingHorizontal="24dp"
        android:textColor="@color/download_failed_message"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Обновить"
        app:circularflow_defaultRadius="10dp"
        app:circularflow_radiusInDP="20dp"
        app:cornerRadius="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message_download_failed"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/update_search_page_btn_background"
        android:textColor="@color/update_search_page_btn_text"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:fontFamily="@font/ys_display_medium"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>