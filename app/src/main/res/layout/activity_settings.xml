<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/layout_background">

    <androidx.appcompat.widget.Toolbar style="@style/ToolbarStyle"
        android:id="@+id/toolbarSettings"
        app:title="@string/settings"
        app:fontFamily="@font/ys_display_medium" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher"
        style="@style/themeSwitcher"
        android:text="Темная тема"/>

    <TextView style="@style/textViewShareStyle"
        android:id="@+id/textViewShare"
        android:text="@string/share_app"/>

    <TextView style="@style/textViewSupportStyle"
        android:id="@+id/textViewSupport"
        android:text="@string/write_to_support"/>

    <TextView style="@style/textViewAgreementStyle"
        android:id="@+id/textViewAgreement"
        android:text="@string/user_apreement"/>


</LinearLayout>