<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    android:orientation="vertical"
    tools:context="com.practicum.playlistmaker.mediaLibrary.ui.fragments.MediaLibFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMediaLib"
        style="@style/ToolbarStyle"
        app:title="@string/media_lib" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/mediaLibTabLayout"
        style="@style/MediaLibTabLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/mediaLibViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>