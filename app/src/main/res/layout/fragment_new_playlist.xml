<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".playlist.ui.NewPlaylistFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarNewPlaylist"
            style="@style/newPlaylistToolbarStyle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/new_playlist" />

        <ImageButton
            android:id="@+id/addPhoto"
            android:layout_width="312dp"
            android:layout_height="312dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="24dp"
            android:adjustViewBounds="true"
            android:background="@drawable/dash_rectangle"
            android:clickable="true"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbarNewPlaylist" />

        <EditText
            android:id="@+id/newTrackName"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/edit_text_rectangle"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/new_track_name"
            android:inputType="text"
            android:maxLines="1"
            android:paddingHorizontal="16dp"
            android:textColor="@color/dark_blue_white"
            android:textColorHint="@color/dark_blue_white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addPhoto" />

        <EditText
            android:id="@+id/newTrackDescription"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_rectangle"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/new_track_description"
            android:inputType="text"
            android:maxLines="1"
            android:paddingHorizontal="16dp"
            android:textColor="@color/dark_blue_white"
            android:textColorHint="@color/dark_blue_white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/newTrackName"
            app:layout_constraintStart_toStartOf="@id/newTrackName"
            app:layout_constraintTop_toBottomOf="@id/newTrackName" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="170dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/create_new_playlist_button_selector"
            android:clickable="true"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:text="@string/create"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newTrackDescription" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>